<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/ticket_activity_padding"
    tools:context=".TicketActivity">

    <TextView
        android:id="@+id/show_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ticket_name_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/show_artist_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ticket_artist_font_size"
        app:layout_constraintEnd_toStartOf="@+id/show_date_text_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_name_text_view"
        android:layout_marginTop="@dimen/ticket_20_dp_margin"/>

    <TextView
        android:id="@+id/show_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="@dimen/ticket_date_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/show_artist_text_view"
        app:layout_constraintTop_toBottomOf="@id/show_name_text_view"
        android:layout_marginTop="@dimen/ticket_20_dp_margin"/>

    <TextView
        android:id="@+id/show_number_of_tickets_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ticket_activity_number_of_tickets"
        android:textSize="@dimen/ticket_date_font_size"
        app:layout_constraintTop_toBottomOf="@id/show_date_text_view"
        android:layout_marginTop="@dimen/ticket_30_dp_margin"/>

    <TextView
        android:id="@+id/show_number_of_tickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ticket_5_dp_margin"
        android:text="5"
        android:textSize="@dimen/ticket_date_font_size"
        app:layout_constraintLeft_toRightOf="@id/show_number_of_tickets_holder"
        app:layout_constraintTop_toBottomOf="@id/show_date_text_view"
        android:layout_marginTop="@dimen/ticket_30_dp_margin"/>


</android.support.constraint.ConstraintLayout>